<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    
    <include file="administracion.xml"/>    
    <include file="pedidos.xml"/>
    <include file="comedor.xml"/>
    
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">   
         
        <action name="validarUsuario" class="login.actions.LoginAction">
            <result name="usuario">/menu.jsp</result>
            <result name="admin">/administracion/administracion.jsp</result>
            <result name="input">/login.jsp</result>  
        </action>
        
        <action name="cerrarSesion" class="login.actions.LogoutAction">
            <result>/login.jsp</result>
        </action>        
        
        <action name="menuPrincipal">
            <result>/menu.jsp</result>
        </action>
        
    </package>    
</struts>
